<h1>Listing books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th> &nbsp; </th>
      <th>BookrackName</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td> &nbsp; </td>
        <td><%= @bookracks.find(book.bookrack_id).name %></td>
        <td> &nbsp; </td>
        <td><%= link_to 'Show', book %></td>
        <td> &nbsp; </td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td> &nbsp; </td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

